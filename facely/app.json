{
  "expo": {
    "name": "Sigma Max",
    "slug": "sigmamax-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": false,
      "buildNumber": "2",
      "bundleIdentifier": "com.sigmamax.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "SigmaMax needs camera access to analyze your facial features and provide personalized recommendations.",
        "NSPhotoLibraryUsageDescription": "SigmaMax needs photo library access to analyze photos of your face."
      }
    },
    "android": {
      "package": "com.sigmamax.app",
      "versionCode": 13,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "SigmaMax needs camera access to analyze your facial features and provide personalized recommendations."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "SigmaMax needs photo library access to analyze photos of your face."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "scheme": "sigmamax",
    "assetBundlePatterns": [
      "assets/fonts/*",
      "assets/**/*"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2260139b-8e0a-4bb6-a992-9c56af42e7d7"
      }
    },
    "owner": "sigmamax2"
  }
}
